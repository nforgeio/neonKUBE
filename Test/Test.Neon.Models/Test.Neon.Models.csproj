<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net48; netcoreapp3.1; net5.0; net6.0</TargetFrameworks>
		<LangVersion>latest</LangVersion>
		<Configurations>Debug;Release;CodeDoc</Configurations>
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
		<GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
		<AnalysisLevel>5.0</AnalysisLevel>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DefineConstants>DEBUG;TRACE</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='CodeDoc|AnyCPU'">
		<DefineConstants />
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<DefineConstants />
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="CouchbaseNetClient" Version="2.7.26" />
		<PackageReference Include="Linq2Couchbase" Version="1.4.2" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\Lib\Neon.Cadence\Neon.Cadence.csproj" />
		<ProjectReference Include="..\..\Lib\Neon.Couchbase\Neon.Couchbase.csproj" />
		<ProjectReference Include="..\..\Lib\Neon.Temporal\Neon.Temporal.csproj" />
		<ProjectReference Include="..\Test.Neon.Models.Definitions\Test.Neon.Models.Definitions.csproj" />
		<ProjectReference Include="..\Test.Neon.Models.Temporal\Test.Neon.Models.Temporal.csproj" />
	</ItemGroup>

	<Target Name="ModelGen" BeforeTargets="BeforeBuild" Condition="Exists('$(NK_ROOT)\Tools\neon-modelgen\bin\$(Configuration)\net6.0\neon-modelgen.dll')">
		<!--- Generate the model source files -->
		<Exec Command="&quot;$(NK_ROOT)\Tools\neon-modelgen\bin\$(Configuration)\net6.0\neon-modelgen.exe&quot; --target-namespace=Test.Neon.Models --persisted --debug-allow-stepinto &quot;$(NK_ROOT)\Test\Test.Neon.Models.Definitions\bin\$(Configuration)\netstandard2.0\Test.Neon.Models.Definitions.dll&quot; &quot;$(ProjectDir)GeneratedTypes.mg.cs&quot;" />
		<Exec Command="&quot;$(NK_ROOT)\Tools\neon-modelgen\bin\$(Configuration)\net6.0\neon-modelgen.exe&quot; --target-namespace=Test.Neon.UxModels --persisted --ux=xaml &quot;$(NK_ROOT)\Test\Test.Neon.Models.Definitions\bin\$(Configuration)\netstandard2.0\Test.Neon.Models.Definitions.dll&quot; &quot;$(ProjectDir)GeneratedUxTypes.mg.cs&quot;" />
		<ItemGroup>
			<!--- Ensure that the new files are included in the build -->
			<Compile Include="**\*.cs" KeepDuplicates="false" />
		</ItemGroup>
	</Target>

</Project>
