<HeadlessMenu class="relative inline-block text-left" OnClose="Close" OnOpen="Open">
    <div>
      <HeadlessMenuButton class="inline-flex w-full justify-center rounded-md bg-slate-600 bg-opacity-80 px-4 py-2 text-sm font-medium text-white hover:bg-opacity-30 focus:outline-none focus-visible:ring-2 focus-visible:ring-white focus-visible:ring-opacity-75">
        Options
        <ChevronDownIcon class="ml-2 -mr-1 h-5 w-5 text-violet-200 hover:text-violet-100" aria-hidden="true"/>
      </HeadlessMenuButton>
    </div>
    <Transition
      Show="@IsOpen"
      Enter="transition ease-out"
      EnterDuration="1000"
      EnterFrom="transform opacity-0 scale-95"
      EnterTo="transform opacity-100 scale-100"
      Leave="transition ease-in"
      LeaveDuration="1000"
      LeaveFrom="transform opacity-100 scale-100"
      LeaveTo="transform opacity-0 scale-95"
    >
      <HeadlessMenuItems class="absolute right-0 mt-2 w-56 origin-top-right divide-y divide-gray-100 rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none">
        <div class="px-1 py-1 ">
          <HeadlessMenuItem Context="item">

                <HeadlessButton
                  OnClick="@(() => value = "Edit")" 
                    class="text-gray-900 hover:bg-violet-500 hover:text-white group flex w-full items-center rounded-md px-2 py-2 text-sm">
               
                 <PencilIcon
                    class="mr-2 h-5 w-5 bg-black-500 hover:bg-white-500"
                    aria-hidden="true"
                  />
                Edit
              </HeadlessButton>
          </HeadlessMenuItem>
          <HeadlessMenuItem Context="item">
                
              <HeadlessButton
                  OnClick="@(() => value = "Duplicate")"
                    class="text-gray-900 hover:bg-violet-500 hover:text-white group flex w-full items-center rounded-md px-2 py-2 text-sm">
                    
                  <DuplicateIcon
                    class="mr-2 h-5 w-5 bg-black-500 hover:bg-white-500"
                    aria-hidden="true"
                  />
                Duplicate
              </HeadlessButton>
          </HeadlessMenuItem>
        </div>
        <div class="px-1 py-1">
              
          <HeadlessMenuItem Context="item">
                
              <HeadlessButton
                  OnClick="@(() => value = "Archive")"
                    class="text-gray-900 hover:bg-violet-500 hover:text-white group flex w-full items-center rounded-md px-2 py-2 text-sm">
                    
                  <ArchiveIcon
                    class="mr-2 h-5 w-5 bg-black-500 hover:bg-white-500"
                    aria-hidden="true"
                  />
                Archive
              </HeadlessButton>
          </HeadlessMenuItem>
          <HeadlessMenuItem Context="item">
                
              <HeadlessButton
                  OnClick="@(() => value = "Move")"
                    class="text-gray-900 hover:bg-violet-500 hover:text-white group flex w-full items-center rounded-md px-2 py-2 text-sm">
                    
                  <DocumentIcon
                    class="mr-2 h-5 w-5 bg-black-500 hover:bg-white-500"
                    aria-hidden="true"
                  />
                Move
              </HeadlessButton>
          </HeadlessMenuItem>
        </div>
        <div class="px-1 py-1">
           
          <HeadlessMenuItem Context="item">
                
              <HeadlessButton
                  OnClick="@(() => value = "Delete")"
                    class="text-gray-900 hover:bg-violet-500 hover:text-white group flex w-full items-center rounded-md px-2 py-2 text-sm">
                    
                  <TrashIcon
                    class="mr-2 h-5 w-5 bg-black-500 hover:bg-white-500"
                    aria-hidden="true"
                  />
                Delete
              </HeadlessButton>
          </HeadlessMenuItem>
        </div>
      </HeadlessMenuItems>
    </Transition>
  </HeadlessMenu>