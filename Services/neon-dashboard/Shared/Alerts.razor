<div class="space-y-3">
  <div  class="">
      <label class="text-4 text-slate-300 font-bold" >
        Alerts
    </label>
    <AlertCard Title="All Clear!" >
      <Left>
        <Icon content=@Icons.Smile />
      </Left>
      <Body>
        <p class="text">The cluster looks healthy</p>
      </Body>
    </AlertCard>
  </div>

  <hr class="border-b border-slate-500 w-100" />
  <div  class="">
       <label class="text-4 text-slate-300 font-bold" >
    Current Active Events
  </label>
   <AlertCard Type=@StyleType.Outline >
      <Body>
        <p class="text"> No Active Events</p>

      </Body>
    </AlertCard>
    </div>
      <div  class="space-y-1">
     <label class="text-4 text-slate-300 font-bold mt-2" >
      Past Events
  </label>
        @if (demoTimeStamp != null)
        {
          <div class="flex space-x-1 justify-between  items-baseline">
         
          <div class="  flex space-x-1 items-baseline ">
            <div class=" px-1 py-0 bg-slate-800  rounded">
               <p class=" text-1 font-bold tracking-wide text-slate-300 leading-none">
            @(demoTimeStamp.Value.ToString(" HH:mm tt"))
          </p>
          </div>
           <p class="text-slate-100 ">
            Cluster Started
          </p>
 
            </div>
             <p class="text-2 text-slate-400">
            @(demoTimeStamp.Value.ToString("MM/dd/yyyy "))
          </p>
         </div>
        }
      
    </div>



  
</div>

@code {
    /// <summary>
    /// adds timestamp to "events" for demo purposes, refactor later
    /// </summary>

    [Parameter]
    public DateTime? demoTimeStamp { get; set; }

}